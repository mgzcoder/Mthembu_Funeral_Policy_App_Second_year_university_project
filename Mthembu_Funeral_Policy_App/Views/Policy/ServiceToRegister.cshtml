                <br /><br /><br />@Html.ActionLink("View More, Get Quotation, Register", "Over80Cover_CR", "policy", new { @class = "btn btn-default", style = "margin-left:15%;font-size:20px;background-color:#1D1D2C;color: #F6F4D5" })

